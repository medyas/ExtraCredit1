<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    tools:context="com.sabri.com.extracredit.MainActivity">


    <TextView
        android:id="@+id/conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="22dp"
        android:text="Conversion"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/toBeConverted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conversion"
        android:layout_alignStart="@+id/conversion"
        android:layout_below="@+id/conversion"
        android:layout_marginTop="20dp"
        android:text="Miles"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/converted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toBeConverted"
        android:layout_alignStart="@+id/toBeConverted"
        android:layout_below="@+id/toBeConverted"
        android:layout_marginTop="21dp"
        android:text="Kilometers"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="10"
        android:textSize="16sp"
        android:layout_below="@+id/conversion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/value"
        android:layout_alignStart="@+id/value"
        android:layout_alignTop="@+id/converted"
        android:text="10"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/conversion"
        android:layout_above="@+id/value"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/value"
        android:layout_alignStart="@+id/value" />
</RelativeLayout>


